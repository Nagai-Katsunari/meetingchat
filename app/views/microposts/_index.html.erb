<ul>
<% if @microposts.present?%>
<% @microposts.each do |a|%>
    
    <div>
    
    <h2><%= link_to a.title,micropost_path(a)%></h2>
    <% if user_signed_in? && current_user.id == a.user_id%>
    <%= link_to "削除", a, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <%= link_to "編集",  edit_micropost_path(a) %>                          
    <% end %>
    <%time=a.created_at%>
    <p><%=   time.strftime('%y/%m/%d')%></p>

    </div>
<% end %>
<% end %>
</ul>